@model IEnumerable<Account>
@{ 
    ViewData["Title"] = "Admin";
}

<h1 class="bg-info text-white" >Users</h1>
<table class="table table-bordered">
    <tr>
        <th>Registration Date</th>
        <th>Name</th>
        <th>Email</th>
        <th>Action</th>
    </tr>
    @foreach (Account account in Model)
    {
<tr>
    <td>@account.DateOfMembership.ToString("dd.MM.yyyy")</td>
    <td>@account.UserName</td>
    <td>@account.Email</td>
    <td><a asp-controller="Admin" asp-action="Delete" asp-route-id="@account.Id" class="btn btn-danger">Delete</a><a asp-controller="Admin" asp-action="Detail" asp-route-id="@account.Id" class="btn btn-primary">Detail</a></td>
</tr>
    }
</table>
<a class="btn btn-primary" asp-controller="Admin" asp-action="Create">Create user</a>